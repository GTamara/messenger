@import '../../styles/mixins.pcss';

button {
    cursor: pointer;
}

.button {
	border-radius: 50px;
	color: var(--color-accent);
	padding: 9px 20px;
	transition: all 250ms;
	border: 0;
	user-select: none;
	touch-action: manipulation;
	outline: 0;
	font-size: 1.1rem;
	font-weight: 500;
    cursor: pointer;

    .button-icon {
        pointer-events: none;
    }
}

[color="primary"] {
	@mixin primary-button-styles;
}

[color="basic"] {
	@mixin basic-button-styles;
}

[color="warn"] {
    @mixin warning-button-styles;
    
    color: white;
}

button[disabled] {
	@mixin disabled-button-styles;
}

button:focus,
button:focus-visible {
	outline: 1px auto var(--color-focus-visible);
}
