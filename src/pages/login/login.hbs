{{#> FormLayout }}
{{#> Card }}
<div class="login">
	<h2 class="card__title">
		Sign in
	</h2>
	{{> Input name="login" label="Login" type="text" }}
	{{> Input name="password" label="Password" type="password" }}
	<div class="login__actions">
		{{> Button label="Sign in" type="submit" color="primary" class="full-width" }}
		{{> Button label="Cancel" type="button" color="basic" class="full-width" }}

	</div>
	{{> Link label="Sigh up" page="register" }}
</div>
{{/ Card}}
{{/ FormLayout}}
