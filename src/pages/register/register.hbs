{{#> FormLayout }}
	{{#> Card }}
		<div class="login">
			<h2 class="card__title">
				Sign up
			</h2>
			{{> Input label="E-mail" type="email" autocomplete="email" }}
			{{> Input label="Login" type="text" autocomplete="off" }}
			{{> Input label="Name" type="text" autocomplete="given-name" }}
			{{> Input label="Last name" type="text" autocomplete="family-name" }}
			{{> Input label="Phone" type="text" autocomplete="tel" }}
			{{> Input label="Password" type="password" autocomplete="new-password" }}
			{{> Input label="Repeat Password" type="password" autocomplete="new-password" }}
			<div class="login__actions">
				{{> Button label="Sign up" type="submit" color="primary" class="full-width" }}
				{{> Button label="Cancel" type="button" color="basic" class="full-width" }}
			</div>
			{{> Link label="Sigh in" page="login" }}
		</div>
	{{/ Card}}
{{/ FormLayout}}
