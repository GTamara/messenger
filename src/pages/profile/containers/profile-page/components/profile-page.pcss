.profile-page {
	&__container {
		margin: auto;
	}

	&__actions {
		margin-block-start: 2rem;
		line-height: 2rem;
        display: flex;
        justify-content: space-between;

        @media (max-width: 600px) {
            flex-direction: column;
            align-items: center;
            gap: 7px;
        }

        button {
            align-items: center;
            display: flex;
            gap: 1rem;
        }
	}
}
