@import '../../../../styles/mixins.pcss';

.chat-container {
	block-size: 100%;
	inline-size: 100%;
	display: flex;

	&__messages {
		@mixin flex-layout;

		gap: 1.5rem;
		width: 310px;
		
		padding: 10px;
		border-inline-end: var(--border);
		background-color: var(--color-basic-background);
	}

	&__selected-chat-content {
		flex-grow: 1;
		background-color: azure;
	}

	&__messages-list {
		flex-grow: 1;
	}
}