.message-item {
	--padding: 10px;

	display: flex;
	gap: 1.5rem;

	/* inline-size: 100%; */

	/* min-height: 70px; */
    
	border-block-start: var(--border);
	margin-inline: calc(0px - var(--padding));
	padding: var(--padding);
	align-items: center;
    justify-self: left;

	&_own {
		background-color: lightcyan;
        justify-self: right;
	}
}
