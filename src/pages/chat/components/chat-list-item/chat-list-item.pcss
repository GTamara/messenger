.chat-list-item {
	--padding: 10px;

	display: flex;
	gap: 1.5rem;

	/* inline-size: 100%; */
	min-height: 70px;
	border-block-start: 1px solid var(--color-lighter-border);
	margin-inline: calc(0px - var(--padding));
	padding: var(--padding);
	align-items: center;

    &:last-child {
        border-block-end: 1px solid var(--color-lighter-border);
    }

	&_active {
		background-color: lightcyan;
	}
    
    &[active="true"] {
		background-color: lightcyan;
	}
}
